<h1>Edit Candidate</h1>

<!-- 如果有欄位沒有填 就會跑底下的迴圈 一一印出錯誤的訊息 -->
<% if @candidate.errors.any? %>
<ul>
  <% @candidate.errors.full_messages.each do |message| %>
  <li class="error_message"><%= message %></li>
  <% end %>
</ul>
<% end %>

<!-- form_for(這個表單會接到一個model) -->
<%= form_for(@candidate) do |form| %>
<div class="label"><%= form.label :name %> <%= form.text_field :name %></div>
<div class="label"><%= form.label :party %> <%= form.text_field :party %></div>
<div class="label"><%= form.label :age %> <%= form.text_field :age %></div>
<div class="label">
  <%= form.label :politics %> <%= form.text_area :politics %>
</div>
<%= form.submit %> <% end %>
